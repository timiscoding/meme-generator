{
  "extends": ["eslint:recommended", "prettier", "prettier/react"],
  "plugins": ["react-hooks"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error"
  }
}
